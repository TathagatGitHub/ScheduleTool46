@model LogonViewModel

<div id="page-container" class="main-content-boxed">
    <!-- Main Container -->
    <main id="main-container">
        <!-- Page Content -->
        <div class="hero-static content content-full bg-white" data-toggle="appear">
            <!-- Info Message -->
            @*<div class="alert alert-success" role="alert" >
                <h3 class="alert-heading font-size-h4 font-w400">Please Note</h3>
                <p class="mb-0">Since this is the DEV/QA environment, Schedule Tool will also accept 1234 as password (in addition to your valid password).  This will allow you to test each user's view of the application.</p>
            </div>*@
            <!-- End Info Message -->
            <!-- Header -->
            <!-- Info Message -->
            @if (Model != null)
            {
            <div class="alert alert-info @ViewBag.InfoVisible" role="alert">
                <h3 class="alert-heading font-size-h4 font-w400">Thank you!</h3>
                <p class="mb-0">Thank you, @(Model.FirstName != null ? Model.FirstName : ""). You have now been logged out of system.</p>
            </div>
            }
            <!-- End Info Message -->
            <!-- Header -->
            <div class="py-30 px-5 text-center">
                <a class="link-effect font-w700" href="~/Home/Index">
                    <i class="si si-fire"></i>
                    <span class="font-size-xl text-primary-dark">Ocean</span><span class="font-size-xl">Media</span>
                </a>
                <h1 class="h2 font-w700 mt-50 mb-10">Welcome to Schedule Tool</h1>
                <h2 class="h4 font-w400 text-muted mb-0">Please sign in using your Windows Credentials</h2>
                If you do not remember, please contact your IT Administrator.
            </div>
            <!-- END Header -->
            <!-- Sign In Form -->
            <div class="row justify-content-center px-5">
                <div class="col-sm-8 col-md-6 col-lg-4">
                    <form class="js-validation-signin" asp-action="Logon" method="post" role="form">
                        <div class="form-group row">
                            <div class="col-12">
                                <div class="form-material floating open">
                                    <input type="text" class="form-control" asp-for="AccountName" required>
                                    <label asp-for="AccountName">Username</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-12">
                                <div class="form-material floating open">
                                    <input type="password" class="form-control" asp-for="Password" required>
                                    <label asp-for="Password">Password</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row gutters-tiny">
                            <div class="col-12 mb-10">
                                <button type="submit" class="btn btn-block btn-hero btn-noborder btn-rounded btn-alt-primary">
                                    <i class="si si-login mr-10"></i> Sign In
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END Sign In Form -->
            <!-- Error Message -->
            @if (Model != null)
            {
            <div class="alert alert-danger alert-dismissable @ViewBag.ErrorVisible" role="alert">
                <button class="close" aria-label="Close" type="button" data-dismiss="alert">
                    <span aria-hidden="true">×</span>
                </button>
                <h3 class="alert-heading font-size-h4 font-w400">Error</h3>
                <p class="mb-0">@ViewBag.LogonError</p>
            </div>
            }
            <!-- End Error Message -->
        </div>
        <!-- END Page Content -->
    </main>
    <!-- END Main Container -->
</div>
<!-- END Page Container -->
