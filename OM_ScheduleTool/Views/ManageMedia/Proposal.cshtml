        SaveSettings("ScheduleProposalLog_PlanYear", _year);
    }

    function ChangeClient(_clientid) {
        GetProposal();
        SaveSettings("ScheduleProposalLog_ClientId", _clientid);
    }


    function SetupQuarters(_year) {
        $("#Q4").html("Q4 " + (_year-1)).show();
