    function DeleteProposal(_ProposalName, _proposalId) {
        swal({
            title: _ProposalName,
            text: 'Are you sure?  This proposal will be permanently deleted.',
            type: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!',
            preConfirm: function () {
                return new Promise(function (resolve) {
                    setTimeout(function () {
                        $("#ancDeleteProposal").closest("div").find("a").hide();
                        $("#ancDeleteProposal").closest("div").find("span").show();
                        resolve();
                    }, 50);
                });
            }
        }).then(
            function (result) {
                $.ajax({
                    url: "/ScheduleProposal/DeleteScheduleProposal",
                    type: 'POST',
                    data: {
                        scheduleProposalId: _proposalId
                    },
                    success: function (result) {
                        if (result.success) {
                            swal({
                                title: 'Success',
                                text: result.responseText + '  Click OK to refresh page.',
                                type: 'success',
                                showCancelButton: false,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'OK',
                                preConfirm: function () {
                                    return new Promise(function (resolve) {
                                        setTimeout(function () {
                                            resolve();
                                        }, 0);
                                    });
                                }
                            }).then(
                                function (result) {
                                    window.location.reload();
                                });
                        }
                        else {
                            $("#ancDeleteProposal").closest("div").find("a").show();
                            $("#ancDeleteProposal").closest("div").find("span").hide();
                            swal('Error!', result.responseText, 'warning');
                            return;
                        }

                    },
                    error: function (response) {
                        $("#ancDeleteProposal").closest("div").find("a").show();
                        $("#ancDeleteProposal").closest("div").find("span").hide();
                        swal('Error1!', response.responseText, 'warning');
                        return;
                    }
                })
            });
    }

    function UnlockProposal(_proposalId) {
        var url = "/ScheduleProposal/Unlock/";

        $.ajax({
            url: url,
            data: { ScheduleProposalId: _proposalId, IsCalledFromBtn: true }, //HM ST-798
            cache: false,
            type: "POST",
            success: function (result) {
                if (result.success !== true) {
                    swal('Wait!', result.responseText, 'warning');
                }
                else {
                    window.location.reload();
                }
            },
            error: function (response) {
                swal('Stop!', response.responseText, 'error');
            }
        });

    }

